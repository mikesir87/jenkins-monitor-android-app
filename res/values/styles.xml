<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="android:homeAsUpIndicator">@drawable/ic_drawer</item>
        <item name="actionBarItemBackground">@drawable/selectable_background_buildwatch</item>
        <item name="popupMenuStyle">@style/PopupMenu.Buildwatch</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Buildwatch</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Buildwatch</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Buildwatch</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Buildwatch</item>
        <item name="actionModeBackground">@drawable/cab_background_top_buildwatch</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_buildwatch</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Buildwatch</item>

        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Buildwatch.Widget</item>
    </style>

    <!-- Drawer -->
    <style name="navigation_drawer_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/nav_list_background</item>
        <item name="android:divider">@color/nav_list_line</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="ActionBar.Solid.Buildwatch" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_buildwatch</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_buildwatch</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_buildwatch</item>
        <item name="progressBarStyle">@style/ProgressBar.Buildwatch</item>
    </style>

    <style name="ActionBar.Transparent.Buildwatch" parent="@style/Widget.Sherlock.ActionBar">
        <item name="background">@drawable/ab_transparent_buildwatch</item>
        <item name="progressBarStyle">@style/ProgressBar.Buildwatch</item>
    </style>

    <style name="PopupMenu.Buildwatch" parent="@style/Widget.Sherlock.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_buildwatch</item>
    </style>

    <style name="DropDownListView.Buildwatch" parent="@style/Widget.Sherlock.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_buildwatch</item>
    </style>

    <style name="ActionBarTabStyle.Buildwatch" parent="@style/Widget.Sherlock.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_buildwatch</item>
    </style>

    <style name="DropDownNav.Buildwatch" parent="@style/Widget.Sherlock.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_buildwatch</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_buildwatch</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_buildwatch</item>
    </style>

    <style name="ProgressBar.Buildwatch" parent="@style/Widget.Sherlock.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_buildwatch</item>
    </style>

    <style name="ActionButton.CloseMode.Buildwatch" parent="@style/Widget.Sherlock.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_buildwatch</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Buildwatch.Widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/PopupMenu.Buildwatch</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Buildwatch</item>
    </style>

</resources>